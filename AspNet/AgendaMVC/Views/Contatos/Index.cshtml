@model IEnumerable<AgendaMVC.Models.Contato>

@{
    ViewData["Title"] = "Index";
}

<h1>Contatos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cadastro)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

 <form asp-action="Delete" id="contatoDeleteForm">
        <input type="hidden" id="contatoid" name="Id" />
  
    </form>

@section Scripts{
<script>
        $(function(){
                    
            $('.deleteBtn').click(function(e){
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                            );
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#contatoid').val(id);
                            $('#contatoDeleteForm').submit();
                        }
                    })
            })
        })
    </script>

}
